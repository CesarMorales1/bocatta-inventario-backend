<div class="table-container">
    <link rel="stylesheet" href="/partials/showList/list.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <script defer src="/partials/matriz/index.js"></script>
    <table class="warehouse-table">
        <thead>
            <tr>
                <th>CODIGO</th>
                <th>Ingrediente</th>
                <th>CANTIDAD DE EXISTENCIA</th>
                <th>
                    ACCIONES
                    <button class="action-btn add" title="Agregar almacÃ©n">
                        <i class="fas fa-plus"></i>
                    </button>
                </th>
            </tr>
        </thead>
        <tbody>
            <% dataToSend.forEach(data => { %>
                <tr tabindex="0">
                    <td><%= data.id %></td>
                    <td><%= data.nombre %></td>
                    <td><%= data.cantidad %></td>
                    <td class="actions">
                        <button 
                            class="action-btn edit" 
                            title="Editar" 
                            data-id="<%= data.id %>">
                            <i class="fas fa-pencil-alt"></i>
                        </button>
                        <button 
                            class="action-btn delete" 
                            title="Eliminar" 
                            data-id="<%= data.id %>">
                            <i class="fas fa-trash"></i>
                        </button>
                        <button 
                            class="action-btn view" 
                            title="Ver" 
                            data-id="<%= data.id %>">
                            <i class="fas fa-eye"></i>
                        </button>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <button id="add-product-btn" class="add-product-btn">
        <i class="fas fa-plus"></i> Agregar Ingrediente
    </button>
</div>
