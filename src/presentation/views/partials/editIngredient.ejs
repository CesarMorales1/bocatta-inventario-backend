<!-- product-form.html -->
<div class="container-ingredient">
  <form class="form">
    <!-- Código de barras (read-only) -->
    <div class="field">
      <label for="barcode">Código de barras</label>
      <input id="barcode" type="text" class="<%= !ingredient.codigo_barras ? 'editable' : '' %>" value="<%= ingredient.codigo_barras || '' %>" <%= !ingredient.codigo_barras ? '' : 'readonly' %> />
    </div>
    

    <!-- Nombre del ingrediente -->
    <div class="field">
      <label for="productName">Nombre del ingrediente</label>
      <input id="productName" type="text" value="<%= ingredient.nombre || '' %>" />
    </div>
    
    <!-- Número de existencias (read-only) -->
    <div class="field">
      <label for="units">Número de existencias</label>
      <input id="units" type="number" class="<%= !ingredient.unidades ? 'editable' : '' %>" value="<%= ingredient.unidades || '' %>" <%= !ingredient.unidades ? '' : 'readonly' %> />
    </div>

    <!-- Botones -->
    <div class="button-group">
      <button class="btn btn-default" type="button">Guardar</button>
      <button class="btn btn-destructive" type="button">Eliminar</button>
      <button class="btn btn-secondary" type="button">Modificar</button>
      <button class="btn btn-outline" type="button">Añadir</button>
    </div>
  </form>
</div>
