<div class="container-form">
    <h2>Formulario de Inventario</h2>
    <form id="inventoryForm">
        <div class="form-group">
            <label for="product">Nombre del producto</label>
            <select id="product" required>
                <option value="">Seleccione un producto</option>
                <% data.forEach(function(item) { %>
                    <option value="<%= item.id %>" data-stock="<%= item.stock %>">
                        <%= item.nombre %>
                    </option>
                <% }); %>
            </select>
            
        </div>
        <div class="form-group">
            <label for="quantity">Cantidad</label>
            <input type="number" id="quantity" placeholder="Ingrese la cantidad" required min="0">
        </div>
        <div class="form-group">
            <label for="currentStock">Existencia actual</label>
            <input type="number" id="currentStock" value="0" readonly>
        </div>
        <div class="form-group">
            <label for="finalStock">Existencia nueva</label>
            <input type="number" id="finalStock" value="0" readonly>
        </div>
        <div class="buttons">
            <button type="button" class="btn-secondary" id="addBtn">AÃ±adir</button>
            <button type="button" class="btn-outline" id="cancelBtn">Cancelar</button>
        </div>
    </form>
</div>
